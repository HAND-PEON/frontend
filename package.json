{
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "lint-fix": "turbo run lint-fix --",
    "lint-fix:prettier": "prettier --write \"./**/*.{js,ts,tsx,md}\" --ignore-path .gitignore",
    "prepare": "husky install",
    "run-lint-staged": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "yarn lint-fix",
      "yarn lint-fix:prettier"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^17.6.3",
    "@commitlint/config-conventional": "^17.6.3",
    "eslint": "^7.32.0",
    "eslint-config-custom": "*",
    "eslint-config-prettier": "^8.8.0",
    "husky": "^8.0.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.5.1",
    "turbo": "^1.9.3"
  },
  "name": "handpyeon-web",
  "packageManager": "yarn@1.22.19",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
